<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>nix_7</artifactId>
    <groupId>com.entis</groupId>
    <version>1.0-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>unit_7_exceptions</artifactId>
  <build>
    <resources>
      <resource>
        <filtering>true</filtering>
        <directory>src/main/resources</directory>
      </resource>
    </resources>
    <finalName>Unit7</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>${maven.surefire.plugin.version}</version>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>${maven.shade.plugin.version}</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>com.entis.Main</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>test</id>
      <properties>
        <log.warn>${log.path}/warn.log</log.warn>
        <log.info>${log.path}/info.log</log.info>
        <log.error>${log.path}/error.log</log.error>
        <log.path>${logs.folder}/${logs.test.folder}</log.path>
      </properties>
    </profile>
    <profile>
      <id>life</id>
      <properties>
        <log.warn>${log.path}/warn.log</log.warn>
        <log.info>${log.path}/info.log</log.info>
        <log.error>${log.path}/error.log</log.error>
        <log.path>${logs.folder}/${logs.life.folder}</log.path>
      </properties>
    </profile>
  </profiles>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.13.1</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>hamcrest-core</artifactId>
          <groupId>org.hamcrest</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter-api</artifactId>
      <version>5.7.0</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>apiguardian-api</artifactId>
          <groupId>org.apiguardian</groupId>
        </exclusion>
        <exclusion>
          <artifactId>opentest4j</artifactId>
          <groupId>org.opentest4j</groupId>
        </exclusion>
        <exclusion>
          <artifactId>junit-platform-commons</artifactId>
          <groupId>org.junit.platform</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter-engine</artifactId>
      <version>5.7.0</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>junit-platform-engine</artifactId>
          <groupId>org.junit.platform</groupId>
        </exclusion>
        <exclusion>
          <artifactId>apiguardian-api</artifactId>
          <groupId>org.apiguardian</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <properties>
    <logs.life.folder>life_logs</logs.life.folder>
    <maven.compiler.source>11</maven.compiler.source>
    <logs.test.folder>test_logs</logs.test.folder>
    <junit.jupiter.version>5.7.0</junit.jupiter.version>
    <maven.shade.plugin.version>3.2.0</maven.shade.plugin.version>
    <lombok.version>1.18.20</lombok.version>
    <maven.compiler.target>11</maven.compiler.target>
    <logs.folder>logs</logs.folder>
    <slf4j.version>1.7.30</slf4j.version>
    <junit.version>4.13.1</junit.version>
    <maven.surefire.plugin.version>2.22.2</maven.surefire.plugin.version>
    <logback.version>1.2.3</logback.version>
  </properties>
</project>
